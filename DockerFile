# Use Python slim image
FROM python:3.9-slim

# Set the working directory inside the container
WORKDIR /app

# Copy requirements.txt first to cache dependencies
COPY requirements.txt .

# Update pip and install dependencies
RUN apt-get update && apt-get install -y gcc libffi-dev python3-dev musl-dev libpq-dev
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

# Debugging Step - Check if 'telegram' module is installed
RUN python -c "import telegram; print('Module telegram is installed')"

# Copy the rest of the app files
COPY . /app

# Expose the port (if needed)
EXPOSE 80

# Command to run the bot
CMD ["python", "main.py"]
